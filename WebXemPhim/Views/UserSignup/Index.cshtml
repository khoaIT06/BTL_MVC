
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

    <link rel="stylesheet" href="~/CSS/styleUser.css">
</head>

<body>
    <div class="signup-container">
        <div class="form-content">
            <a href="~/UserHome/Index" class="logo">
                <img src="~/Image_User/logo.png" alt="">
            </a>
            <h2 class="title">Đăng Kí</h2>
            <div class="form-group">
                <div class="input-group">
                    <p>Họ và tên</p>
                    <input type="text" name="nameuser" placeholder="Tên người dùng">
                    <span>Tên người dùng không được để trống</span>
                </div>
                <div class="input-group">
                    <p>Ngày sinh</p>
                    <input type="date" name="birthday">
                    <span>Tên người dùng không được để trống</span>
                </div>
                <div class="input-group">
                    <p>Tài khoản</p>
                    <input type="text" name="username" placeholder="Tài khoản">
                    <span>Tên người dùng không được để trống</span>
                </div>
                <div class="input-group">
                    <p>Mật khẩu</p>
                    <input type="password" name="password" placeholder="Mật khẩu">
                    <span>Tên người dùng không được để trống</span>
                </div>
                <div class="input-group">
                    <p>Xác nhận mật khẩu</p>
                    <input type="password" name="confirmpass" placeholder="Xác nhận mật khẩu">
                    <span>Tên người dùng không được để trống</span>
                </div>
                <div class="input-group">
                    <p>Email</p>
                    <input type="email" name="email" placeholder="Email">
                    <span>Tên người dùng không được để trống</span>
                </div>
            </div>
            <button class="btn btn-primary">Đăng kí</button>
            <div class="form-social">
                <p>Hoặc đăng kí bằng</p>
                <div>
                    <i class="ri-facebook-circle-fill"></i>
                    <i class="ri-google-fill"></i>
                </div>
            </div>
            <p>Bạn đã có tài khoản? <a href="~/UserSignin/Index">Đăng nhập ngay</a> </p>
        </div>


    </div>
    <div id="toast">
        <div id="img">
        </div>
        <div id="desc">
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/JS/user-script-signup.js"></script>
</body>

</html>
